root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = off

[*.md]
# 保留 Markdown 中故意的行尾空白
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.json]
indent_size = 2

[*.java]
indent_size = 4

[*.kt]
indent_size = 4

[*.gradle]
indent_size = 4

[*.ps1]
# Windows 腳本維持 CRLF 以符合本地慣例
end_of_line = crlf

[*.bat]
end_of_line = crlf

